<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MusicPlayer.App"
			 xmlns:vm="clr-namespace:MusicPlayer.ViewModels"
			 xmlns:vmg="clr-namespace:MusicPlayer.ViewModels.Generic"
			 xmlns:views="clr-namespace:MusicPlayer.Views"
			   xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
			 xmlns:mi="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
			 RequestedThemeVariant="Default"
			 x:DataType="vm:MainViewModel">

	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
	
	<Application.Styles>
		<!--<FluentTheme>
			<FluentTheme.Palettes>
				<ColorPaletteResources x:Key="Light" Accent="#ff132a13" AltHigh="White" AltLow="White" AltMedium="White" AltMediumHigh="White" AltMediumLow="White" BaseHigh="Black" BaseLow="#ff659839" BaseMedium="#ff306217" BaseMediumHigh="#ff0d3e00" BaseMediumLow="#ff1f500b" ChromeAltLow="#ff0d3e00" ChromeBlackHigh="Black" ChromeBlackLow="#ff659839" ChromeBlackMedium="#ff0d3e00" ChromeBlackMediumLow="#ff306217" ChromeDisabledHigh="#ff659839" ChromeDisabledLow="#ff306217" ChromeGray="#ff1f500b" ChromeHigh="#ff659839" ChromeLow="#ffc1dbad" ChromeMedium="#ffafce96" ChromeMediumLow="#ffc1dbad" ChromeWhite="White" ListLow="#ffafce96" ListMedium="#ff659839" RegionColor="#ffaecc66" />
				<ColorPaletteResources x:Key="Dark" Accent="#ff132a13" AltHigh="Black" AltLow="Black" AltMedium="Black" AltMediumHigh="Black" AltMediumLow="Black" BaseHigh="White" BaseLow="#ff606c38" BaseMedium="#ffaeb794" BaseMediumHigh="#ffc2caab" BaseMediumLow="#ff879266" ChromeAltLow="#ffc2caab" ChromeBlackHigh="Black" ChromeBlackLow="#ffc2caab" ChromeBlackMedium="Black" ChromeBlackMediumLow="Black" ChromeDisabledHigh="#ff606c38" ChromeDisabledLow="#ffaeb794" ChromeGray="#ff9ba47d" ChromeHigh="#ff9ba47d" ChromeLow="#ff27320b" ChromeMedium="#ff354116" ChromeMediumLow="#ff525e2d" ChromeWhite="White" ListLow="#ff354116" ListMedium="#ff606c38" RegionColor="#ff283618" />
			</FluentTheme.Palettes>
		</FluentTheme>-->
		<themes:MaterialTheme BaseTheme="Dark" PrimaryColor="Green" SecondaryColor="Orange" />

		<dialogHostAvalonia:DialogHostStyles />
	</Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Resources/ResourceDictionary.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>

	<Application.DataTemplates>
		<DataTemplate DataType="{x:Type vm:HomeContentViewModel}">
			<views:HomeContentView />
		</DataTemplate>

		<DataTemplate DataType="{x:Type vm:PlaylistsViewModel}">
			<views:PlaylistsView/>
		</DataTemplate>

		<DataTemplate DataType="{x:Type vm:UnifiedCategoryViewModel}">
			<views:UnifiedCategoryView/>
		</DataTemplate>

		<DataTemplate DataType="{x:Type vm:MusicNavigationViewModel}">
			<views:MusicNavigationView />
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:NewCategoryInputViewModel}">
			<views:NewCategoryInput />
		</DataTemplate>
		<DataTemplate DataType="{x:Type vmg:GenericNotificationModal}">
			<views:GenericNotificationModalView />
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:SpotifyRecViewModel}">
			<views:SpotifyRecView />
		</DataTemplate>

	</Application.DataTemplates>

	<Application.Styles>
		<mi:MaterialIconStyles />
	</Application.Styles>

	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="/Assets/avalonia-logo.ico"
					  ToolTipText="Avalonia Tray Icon ToolTip">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="Play/Pause" Command="{Binding MusicNavigation.PausePlayClicked}" />
						<NativeMenuItemSeparator />
						<NativeMenuItem Header="Next Song" Command="{Binding MusicNavigation.SkipForwardClicked}"/>
						<NativeMenuItem Header="Prev Song" Command="{Binding MusicNavigation.SkipBackClicked}"/>
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>
