<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:MusicPlayer.ViewModels"
			 xmlns:mi="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
			 xmlns:views="clr-namespace:MusicPlayer.Views"
			 x:DataType="vm:SpotifyRecViewModel"
			 x:Class="MusicPlayer.Views.SpotifyRecView">
	<Grid RowDefinitions="*,*" ColumnDefinitions="*,*,*">

		<Image Grid.Column="0" Grid.Row="0" Margin="20" Height="50" Width="200" VerticalAlignment="Top" HorizontalAlignment="Left"
         Source="/Assets/spotify-logo.png"/>
		<Expander Grid.Row="0" Header="Genres">
			<StackPanel>
				<AutoCompleteBox Watermark="Please enter the comma separated genres (max 5)"></AutoCompleteBox >
			</StackPanel>
		</Expander>

		<Expander Grid.Column="1" Grid.Row="0" Header="Artists">
			<TextBox Watermark="Please enter the artists to search Spotify for (max 5)">
				<TextBox.InnerRightContent>
					<mi:MaterialIcon Kind="Magnify" />
				</TextBox.InnerRightContent>
			</TextBox>
		</Expander>

		<Expander Grid.Column="2" Grid.Row="0" Header="Tracks">
			<TextBox Watermark="Please enter the tracks to search Spotify for (max 5)">
				<TextBox.InnerRightContent>
					<mi:MaterialIcon Kind="Magnify" />
				</TextBox.InnerRightContent>
			</TextBox>
		</Expander>


		<Button HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1">Start Searching</Button>
	</Grid>
</UserControl>
