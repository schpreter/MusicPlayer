<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		xmlns:vm="clr-namespace:MusicPlayer.ViewModels"
        x:Class="MusicPlayer.Views.HomeContentView"
        x:DataType="vm:HomeContentViewModel">
	<Design.DataContext>
		<vm:HomeContentViewModel />
	</Design.DataContext>
	<Grid>
		<StackPanel Margin="20">
			<ItemsControl ItemsSource="{Binding MusicFiles}" >
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Border Margin="0,10,0,0"
							CornerRadius="5"
							BorderBrush="Gray" BorderThickness="1"
							Padding="5">
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="{Binding Artist}"/>
								<TextBlock Margin="5 0" FontWeight="Bold"
											Text="{Binding Title}"/>
								<TextBlock Margin="5 0" FontWeight="Bold"
											Text="{Binding Duration}"/>
							</StackPanel>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</StackPanel>
	</Grid>
</UserControl>
