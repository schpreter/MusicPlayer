<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		xmlns:vm="clr-namespace:MusicPlayer.ViewModels"
        x:Class="MusicPlayer.Views.HomeContentView"
        x:DataType="vm:HomeContentViewModel">
	<Design.DataContext>
		<vm:HomeContentViewModel />
	</Design.DataContext>
	<Grid>
		<ListBox ItemsSource="{Binding MusicFiles}" SelectedItem="{Binding Properties.SelectedSongListItem}" Background="Transparent">
			<ListBox.Styles>
				<Style Selector="ListBoxItem">
					<Setter Property="Background" Value="Transparent"/>
				</Style>
			</ListBox.Styles>
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border Margin="0,10,0,0"
						CornerRadius="10"
						BorderBrush="Gray" BorderThickness="1"
						Padding="5">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="{Binding SongMetaData.Artists_conc}"/>
							<TextBlock Margin="5 0" FontWeight="Bold"
										Text="{Binding SongMetaData.Title}"/>
							<TextBlock Margin="5 0" FontWeight="Bold"
										Text="{Binding SongMetaData.Duration_display}"/>
						</StackPanel>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
