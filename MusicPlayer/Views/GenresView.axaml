<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:MusicPlayer.ViewModels"
			 xmlns:views="clr-namespace:MusicPlayer.Views"
			 x:Class="MusicPlayer.Views.GenresView"
			 x:DataType="vm:GenresViewModel">
	<Design.DataContext>
		<vm:GenresViewModel />
	</Design.DataContext>

	<StackPanel>
		<ScrollViewer>
			<ItemsControl ItemsSource="{Binding ItemCollection}" ItemTemplate="{StaticResource TileDisplayTemplate}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<WrapPanel Orientation="Horizontal" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
			</ItemsControl>
		</ScrollViewer>
		<ScrollViewer>

			<ListBox
			ItemsSource="{Binding SongsByGenre}"
			SelectedItem="{Binding Properties.SelectedSongListItem}"
			SelectedIndex="{Binding Properties.SelectedSongIndex}"
			Background="Transparent"
			ItemTemplate="{StaticResource SongListDisplayTemplate}"
				>
				<ListBox.Styles>
					<Style Selector="ListBoxItem">
						<Setter Property="Background" Value="Transparent"/>
					</Style>
				</ListBox.Styles>

			</ListBox>
		</ScrollViewer>

	</StackPanel>

</UserControl>
